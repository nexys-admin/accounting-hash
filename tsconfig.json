{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",

  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "CommonJS",
    "target": "es2022",
    "outDir": "./dist" /* Redirect output structure to the directory. */,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": ["src/index.ts"], // not all modules work with ts, add them step by step
  "exclude": ["**/*.test.ts"]
}
